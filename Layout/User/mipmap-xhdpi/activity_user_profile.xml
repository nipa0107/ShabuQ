<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EFEEEE"
    android:orientation="vertical"
    tools:context=".UserProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/r"
        android:id="@+id/text1">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="บัญชีผู้ใช้"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_centerHorizontal="true">
        </TextView>
    </RelativeLayout>
    <TextView
        android:id="@+id/showName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ชื่อ"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_below="@+id/text1"
        android:padding="10dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/showEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="อีเมล"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/showName"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/showTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เบอร์โทร"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/showEmail"
        android:padding="10dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/showTel"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_border"
        android:text="แก้ไขโปรโฟล์"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_edit"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_border"
        android:text="ออกจากระบบ"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</RelativeLayout>